            // 检测滚动位置的函数
            let endingTriggered = false;
            function checkScrollPosition() {
                if (endingTriggered) return; // 确保只触发一次
                
                // 获取最后一句话的位置
                const finalSentenceRect = finalSentence.getBoundingClientRect();
                // 当最后一句话完全进入视口并停留1秒后触发结尾序列
                if (finalSentenceRect.top >= 0 && 
                    finalSentenceRect.bottom <= (window.innerHeight || document.documentElement.clientHeight)) {
                    // 标记为已触发
                    endingTriggered = true;
                    
                    // 高亮最后一句
                    finalSentence.style.color = '#00ff9d';
                    finalSentence.style.fontWeight = 'bold';
                    finalSentence.style.transition = 'color 2s ease';
                    
                    // 延迟1秒后显示GIF
                    setTimeout(function() {
                        // 显示结尾序列容器
                        endingSequence.style.opacity = '1';
                        
                        // 添加电视扫描线动画
                        tvScanline.style.opacity = '0.8';
                        let scanlinePos = 0;
                        const scanlineAnimation = setInterval(function() {
                            scanlinePos += 2;
                            if (scanlinePos > alyaGif.offsetHeight) {
                                scanlinePos = 0;
                            }
                            tvScanline.style.top = scanlinePos + 'px';
                        }, 20);
                        
                        // 给用户6秒时间查看GIF
                        setTimeout(function() {
                            // 停止扫描线动画
                            clearInterval(scanlineAnimation);
                            
                            // 电视关机效果
                            // 1. 闪烁效果
                            tvEffect.style.transition = 'background-color 0.1s ease';
                            tvEffect.style.backgroundColor = 'rgba(255,255,255,0.8)';
                            tvEffect.style.opacity = '1';
                            
                            setTimeout(function() {
                                tvEffect.style.backgroundColor = 'transparent';
                                
                                setTimeout(function() {
                                    // 2. 第二次闪烁
                                    tvEffect.style.backgroundColor = 'rgba(255,255,255,0.6)';
                                    
                                    setTimeout(function() {
                                        // 3. 电视机特有的关机效果 - CRT关机
                                        const brightDot = document.getElementById('tv-bright-dot');
                                        const brightLine = document.getElementById('tv-bright-line');
                                        
                                        // 初始化亮点和亮线
                                        brightDot.style.opacity = '0';
                                        brightLine.style.opacity = '0';
                                        
                                        // 第一步：画面收缩 + 闪烁
                                        tvEffect.style.transition = 'all 0.2s ease-out';
                                        tvEffect.style.backgroundColor = 'rgba(255,255,255,0.4)';
                                        tvEffect.style.opacity = '1';
                                        
                                        alyaGif.style.transition = 'all 0.5s cubic-bezier(0.2, 0, 0.1, 1)';
                                        tvFrame.style.transition = 'all 0.5s ease-in';
                                        
                                        // 画面从四边向中间收缩
                                        alyaGif.style.transform = 'scale(0.1)';
                                        alyaGif.style.opacity = '0.3';
                                        alyaGif.style.filter = 'brightness(1.5) contrast(2)';
                                        
                                        setTimeout(function() {
                                            // 第二步：显示亮点
                                            alyaGif.style.opacity = '0';
                                            tvEffect.style.opacity = '0.7';
                                            tvEffect.style.backgroundColor = 'rgba(0, 0, 0, 0.92)';
                                            
                                            brightDot.style.opacity = '1';
                                            brightDot.style.transform = 'translate(-50%, -50%) scale(1)';
                                            
                                            setTimeout(function() {
                                                // 第三步：亮点变成水平线
                                                brightDot.style.opacity = '0';
                                                brightDot.style.transform = 'translate(-50%, -50%) scale(0.5)';
                                                
                                                brightLine.style.opacity = '1';
                                                brightLine.style.transform = 'translateY(-50%) scaleX(1)';
                                                
                                                setTimeout(function() {
                                                    // 第四步：水平线逐渐消失
                                                    brightLine.style.transition = 'all 1s cubic-bezier(0.1, 0.3, 0.2, 1)';
                                                    brightLine.style.opacity = '0';
                                                    brightLine.style.height = '1px';
                                                    brightLine.style.boxShadow = '0 0 5px 1px rgba(255,255,255,0.3)';
                                                    
                                                    // 最终淡出整个结尾序列
                                                    setTimeout(function() {
                                                        tvEffect.style.backgroundColor = '#000';
                                                        tvEffect.style.opacity = '1';
                                                        
                                                        setTimeout(function() {
                                                            endingSequence.style.transition = 'opacity 1.5s ease';
                                                            endingSequence.style.opacity = '0';
                                                        }, 500);
                                                    }, 1000);
                                                }, 400);
                                            }, 300);
                                        }, 500);
                                    }, 200);
                                }, 200);
                            }, 200);
                        }, 6000); // 6秒后开始关机效果
                    }, 1000); // 延迟1秒触发
                }
            }
            
            // 添加滚动事件监听器
            window.addEventListener('scroll', function() {
                // 使用节流函数减少检测频率
                clearTimeout(window.scrollEndTimer);
                window.scrollEndTimer = setTimeout(checkScrollPosition, 100);
            });
            
            // 页面加载完成后也检查一次位置（处理已经位于底部的情况）
            setTimeout(checkScrollPosition, 500);
        });
    </script>
</body>
</html>